{{>_menusite}}

<div class="jumbotron descr-top-contato">
    <div class="container text-center">
        <h1>Contato</h1>
    </div>
</div>

<div class="jumbotron contato">
    <div class="container">
        <div class="row featurette">
            <div class="col-md-6">
                <h3 class="featurette-heading exp-home-titulo">{{contatoinfo.tituloform}}</h3>
                {{>_msg}}
                <form method="POST" action="/contato/add-contato">
                    <div class="form-group">
                        <label>Nome</label>
                        <input type="text" name="nome" class="form-control" placeholder="Nome completo" value="{{contato.nome}}" required>
                    </div>
                    <div class="form-group">
                        <label>E-mail</label>
                        <input type="email" name="email" class="form-control" placeholder="Seu Melhor E-mail" value="{{contato.email}}" required>
                    </div>
                    <div class="form-group">
                        <label>Assunto</label>
                        <input type="text" name="assunto" class="form-control" placeholder="Assunto da mensagem" value="{{contato.assunto}}" required>
                    </div>
                    <div class="form-group">
                        <label>Mensagem</label>
                        <textarea class="form-control" name="mensagem" rows="6" value="{{contato.mensagem}}" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-danger">Enviar</button>
                </form>
            </div>
            <div class="col-md-6">
                <h3 class="featurette-heading exp-home-titulo">Contato</h3>
                <p class="lead">marciocamollez@hotmail.com</p>
                
            </div>
        </div>
    </div>
</div>


