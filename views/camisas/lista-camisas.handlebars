<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Lista Camisas</h2>
            </div>
            <div class="p-2">
                <a href="/camisas/cadastrar-camisa">
                    <button class="btn btn-outline-success btn-sm">
                        Cadastrar
                    </button>
                </a>
            </div>
        </div>
        <hr>
        {{>_msg}}
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Nome do Time</th>
                        <th>Ano</th>
                        <th>Cor</th>
                        <th>Fornecedor</th>
                        <th>Patrocinador</th>
                        <th>Categoria</th>
                        <th>Imagem</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each camisa.docs}}
                    <tr>
                        <td>{{nome_do_time}}</td>
                        <td>{{ano}}</td>
                        <td>{{cor}}</td>
                        <td>{{fornecedor}}</td>
                        <td>{{patrocinador}}</td>
                        <td>
                            <a href="/camisas/visualizar-categoria-camisa/{{categoriacamisa._id}}">
                                {{categoriacamisa.nome}}
                            </a>
                        </td>
                        <td><img src="{{fileName}}" class="img-responsive" /></td>
                        <td class="text-center">
                            <span class="d-none d-md-block">
                                <a href="/camisas/visualizar-camisa/{{_id}}"
                                    class="btn btn-outline-primary btn-sm">Visualizar</a>
                                <a href="/camisas/editar-camisa/{{_id}}"
                                    class="btn btn-outline-warning btn-sm">Editar</a>
                                <a href="/camisas/deletar-camisa/{{_id}}" class="btn btn-outline-danger btn-sm" data-confirm="Tem certeza de que deseja excluir o item o selecionando">Apagar</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="/camisas/visualizar-camisa/{{_id}}">Visualizar</a>
                                    <a class="dropdown-item" href="/camisas/editar-camisa/{{_id}}">Editar</a>
                                    <a class="dropdown-item" href="/camisas/deletar-camisa/{{_id}}" data-confirm="Tem certeza de que deseja excluir o item o selecionando">Apagar</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <nav aria-label="paginacao">
                <ul class="pagination pagination-sm justify-content-center">
                    {{#if camisa.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="/camisas/lista-camisas?page=1" tabindex="-1">Primeira</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="/camisas/lista-camisas?page={{camisa.prevPage}}">{{camisa.prevPage}}</a></li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Primeira</a>
                    </li>
                    {{/if}}

                    
                    <li class="page-item active">
                        <a class="page-link" href="#">{{camisa.page}}</a>
                    </li>

                    {{#if camisa.hasNextPage}}
                    <li class="page-item"><a class="page-link" href="/camisas/lista-camisas?page={{camisa.nextPage}}">{{camisa.nextPage}}</a></li>
                    <li class="page-item">
                        <a class="page-link" href="/camisas/lista-camisas?page={{camisa.totalPages}}">Última</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Última</a>
                    </li>
                    {{/if}}
                    
                </ul>
            </nav>
        </div>
    </div>
</div>